---
import Layout from '@/layouts/Layout.astro'
import { UserSearch } from '@/components/search/UserSearch' // New component
import { RepoSearch } from '@/components/search/RepoSearch' // New component
---

<Layout>
  <div class='container mx-auto p-4'>
    <h1 class='text-2xl font-bold mb-6'>Search Results</h1>

    {/* Use grid-cols-3 as the base for medium screens */}
    <div class='grid grid-cols-1 md:grid-cols-3 gap-8'>
      {/* User section takes 1 column on medium screens */}
      <section class='md:col-span-1'>
        <h2 class='text-xl font-semibold mb-4'>Users</h2>
        <UserSearch client:load />
      </section>

      {/* Repository section takes 2 columns on medium screens */}
      <section class='md:col-span-2'>
        <h2 class='text-xl font-semibold mb-4'>Repositories</h2>
        <RepoSearch client:load />
      </section>
    </div>
  </div>
</Layout>
