---
import '@/styles/global.css'
import '@fontsource-variable/inter'
import { App } from '@/layouts/App'
---

<!doctype html>
<html lang='en' class='size-full'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='color-scheme' content='dark light' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>fknexe - GitHub Binary Downloader</title>
    <meta
      name='description'
      content='A simple way to download binaries from GitHub repositories without technical knowledge.'
    />
  </head>
  <!-- Don't change the Layout styles here, change them in App.tsx -->
  <body class='size-full flex flex-col'>
    <App client:only='react' url={Astro.url}>
      <slot />
    </App>
  </body>
</html>
